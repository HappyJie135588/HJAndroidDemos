<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_000000">
    <!--ijk播放器-->
    <com.huangjie.ijkplayer.media.IjkVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <master.flame.danmaku.ui.widget.DanmakuView
        android:id="@+id/danmaku"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <!--加载中,缓存-->
    <RelativeLayout
        android:id="@+id/rl_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ProgressBar
            android:id="@+id/pb_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pb_loading"
            android:layout_centerHorizontal="true"
            android:text="加载中..."
            android:textColor="@color/color_ffffff"
            android:textSize="20sp"/>
    </RelativeLayout>
    <!--播放控制器-->
    <FrameLayout
        android:id="@+id/fl_controller"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--顶部播放控制器-->
        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_77000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="返回"
                android:textColor="@color/color_ffffff"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="@color/color_ffffff"
                android:textSize="20dp"
                tools:text="湖南卫视"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/color_ffffff"
                android:textSize="20dp"
                tools:text="系统时间"/>
        </LinearLayout>
        <!--锁-->
        <TextView
            android:id="@+id/tv_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:text="打开"
            android:textColor="@color/color_ffffff"
            android:textSize="20dp"/>
        <!--进度设置-->
        <RelativeLayout
            android:id="@+id/rl_scroll_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/color_77000000"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_scroll_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:text="+100s"
                android:textColor="@color/color_ffffff"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tv_scroll_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_scroll_time"
                android:padding="10dp"
                android:text="00:00"
                android:textColor="@color/color_ffffff"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tv_scroll_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_scroll_time"
                android:layout_toRightOf="@id/tv_scroll_target"
                android:padding="10dp"
                android:text="05:00"
                android:textColor="@color/color_ffffff"
                android:textSize="20dp"/>
        </RelativeLayout>
        <!--底部播放控制器-->
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/color_77000000"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:text="播放"
                    android:textColor="@color/color_ffffff"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/tv_play_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/color_ffffff"/>

                <TextView
                    android:id="@+id/tv_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/00:00"
                    android:visibility="gone"
                    android:textColor="@color/color_ffffff"/>

                <LinearLayout
                    android:id="@+id/ll_dm"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/tv_dm_turn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="弹幕开"
                        android:textColor="@color/color_ffffff"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/tv_dm_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="设置"
                        android:textColor="@color/color_ffffff"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/tv_dm_send"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@color/color_de262a3b"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="发射弹幕"
                        android:textColor="@color/color_ffffff"
                        android:textSize="20dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_turn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="切换"
                    android:textColor="@color/color_ffffff"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/tv_full"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="全屏"
                    android:textColor="@color/color_ffffff"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <!--亮度设置-->
    <RelativeLayout
        android:id="@+id/rl_bright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/color_77000000"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_bright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="亮度"
            android:textColor="@color/color_ffffff"
            android:textSize="20dp"/>

        <SeekBar
            android:id="@+id/sb_bright"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_bright"
            android:max="100"/>
    </RelativeLayout>
    <!--音量设置-->
    <RelativeLayout
        android:id="@+id/rl_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/color_77000000"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="音量"
            android:textColor="@color/color_ffffff"
            android:textSize="20dp"/>

        <SeekBar
            android:id="@+id/sb_volume"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_volume"
            android:max="100"/>
    </RelativeLayout>
</RelativeLayout>