<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:text="XXXXXXXXXXXXXXXXXXXX"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="226dp"
        android:layout_height="46dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:hint="XXXXXXXXXXXXXXXXXXXX"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>

    <View
        android:id="@+id/view_et_bottom"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        app:layout_constraintBottom_toBottomOf="@id/et_name"
        app:layout_constraintLeft_toLeftOf="@id/et_name"
        app:layout_constraintRight_toRightOf="@id/et_name"/>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="@id/et_name"
        app:layout_constraintRight_toRightOf="@id/et_name"
        app:layout_constraintTop_toTopOf="@id/et_name"/>

    <View
        android:id="@+id/view_hen"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_name"/>

    <TextView
        android:id="@+id/tv_cencel"
        android:layout_width="133dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="XXXXXXXXXXXXXXXXXXXX"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_hen"/>

    <View
        android:id="@+id/view_shu"
        android:layout_width="1dp"
        android:layout_height="36dp"
        app:layout_constraintLeft_toRightOf="@id/tv_cencel"
        app:layout_constraintTop_toBottomOf="@id/view_hen"/>

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="133dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="XXXXXXXXXXXXXXXXXXXX"
        app:layout_constraintLeft_toRightOf="@id/view_shu"
        app:layout_constraintTop_toBottomOf="@id/view_hen"/>

</android.support.constraint.ConstraintLayout>