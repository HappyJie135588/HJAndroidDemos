<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huangjie.hjandroiddemos.MainActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>

    <Button
        android:id="@+id/btn_rxjava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RxjavaDemo"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_qqslidemenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QQSlideMenu"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_mediarecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mediarecord"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_customerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_customerview"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_webview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WebView"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_websocket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WebSocket"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download"
        android:textAllCaps="false"/>


</LinearLayout>
